<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fproject.app.mybatis.mapper.ProfilesMapper"> 
	<select id="info" resultType="fproject.app.fproject.vo.ProfilesVo" parameterType="int">
		select * from profiles where num=#{num}
	</select>
	<insert id="insert" parameterType="fproject.app.fproject.vo.ProfilesVo">
		insert into profiles values(#{num}, #{name}, #{phone}, #{email}, #{birth}, '', '', '')
	</insert>
	<update id="updateBirth" parameterType="fproject.app.fproject.vo.ProfilesVo">
		update profiles 
		set birth=#{birth}
		where num=#{num}
	</update>
	<update id="updateBackimg" parameterType="fproject.app.fproject.vo.ProfilesVo">
		update profiles 
		set backimg=#{backimg}
		where num=#{num}
	</update>
	<update id="setupdate" parameterType="fproject.app.fproject.vo.ProfilesVo">
		update profiles 
		set name=#{name},phone=#{phone},email=#{email},birth=#{birth},
		profileimg=#{profileimg},backimg=#{backimg},msg=#{msg}
		where num=#{num}
	</update>
</mapper>